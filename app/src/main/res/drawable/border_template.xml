<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed = "true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="200dp"/>
            <solid android:color="@color/border_color"/>
            <stroke android:width="5px" android:color="@color/border_color" />
            <padding android:left="10px" android:top="3px"
                android:right="10px" android:bottom="3px" />
        </shape>
    </item>
    <item android:state_pressed = "false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="200dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="5px" android:color="@color/border_color" />
            <padding android:left="50px" android:top="10px"
                android:right="50px" android:bottom="10px" />
        </shape>
    </item>
</selector>